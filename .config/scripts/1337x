#!/usr/bin/env bash

#     _    _
#    / \  | | __ _ _ __  _ __      Alann Santos
#   / _ \ | |/ _` | '_ \| '_ \     https://github.com/alannssantos
#  / ___ \| | (_| | | | | | | |
# /_/   \_\_|\__,_|_| |_|_| |_|

# Varialvel de Client Torrent.
Programa="transmission-gtk"

# O site que vai ser usado.
Site="https://1337x.to"

# Tratando a pesquisa.
Pesquisa="$*"

# Definindo se vai pesquisar ou olhar o top 100.
if [ -z "$Pesquisa" ] ; then
	Url="top-100"
else
	Url='search/'"$Pesquisa"'/1/'
fi

# A magica.
Resultados=$(wget -qO- "$Site/$Url" \
	| sed -r '/<td class=\"coll-[0-4]/!d
		s/^.*leeches">(.*)<.*$/\1/
		s/^.*mob-[a-z]*">(.*)<span.*$/\1/
		s/^.*seeds">(.*)<.*$/\1/
		s/^.*href=\"(\/torrent.*)\">(.*)<\/a>.*$/\2â”ƒ\1/' \
	| sed  'N;N;N;s!\n!â”ƒ!g' \
	| awk -F 'â”ƒ' '{print "ðŸ’¾"$5 "ð¤­¢"$1 "ð¤­¢ðŸŒ±"$3 "ð¤­¢ðŸ”½"$4 "ð¤­¢â”ƒ"$2 }' \
	| column -t -s "ð¤­¢" \
	| fzf -e -m --color=16 --border \
	| sed 's/^.*â”ƒ//')

if [ -z "$Resultados" ]; then
	echo -n ""
else
	for Resultado in $Resultados
		do
		$Programa "$(wget -qO- "$Site$Resultado" \
			| sed -r '/Magnet Download/!d;s/^.*href=\"(.*)\".*$/\1/')"
                done
fi
